<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>POC - Questionario Spring</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- CONTROLLER QUESTIONARIO -->
	<servlet>
		<servlet-name>ControllerQuestionario</servlet-name>
		<servlet-class>com.mackleaps.control.ControllerQuestionario</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ControllerQuestionario</servlet-name>
		<url-pattern>/ControllerQuestionario.do</url-pattern>
	</servlet-mapping>

	<!-- CONTROLLER CATEGORIA -->
	<servlet>
		<servlet-name>ControllerCategoria</servlet-name>
		<servlet-class>com.mackleaps.control.ControllerCategoria</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ControllerCategoria</servlet-name>
		<url-pattern>/ControllerCategoria.do</url-pattern>
	</servlet-mapping>
	
	<!-- CONTROLLER QUESTAO -->
	<servlet>
		<servlet-name>ControllerQuestao</servlet-name>
		<servlet-class>com.mackleaps.control.ControllerQuestao</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ControllerQuestao</servlet-name>
		<url-pattern>/ControllerQuestao.do</url-pattern>
	</servlet-mapping>

</web-app>
